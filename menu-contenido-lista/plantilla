<script type="text/javascript">

var aURLS=[];


if (typeof jQuery == 'undefined') {  
    
    aURLs = [
        '/html/js/jquery/jquery-1.11.0.min.js',
    '/html/js/jquery/jquery-ui.js' 
];
    
} 


YUI().use('get', function(Y){


    Y.Get.js(
    aURLs ,
    {
    
        onFailure: function () {
            Y.log('Failure!');
        },

        onSuccess: function () {
            $(document).ready(function(e){ 
           
              var $id='$reserved-article-id.data';
                var $tabs = $("#"+$id);
                        
	                     $tabs.tabs(
                       {
                         event:"mouseover"
                        
                        }
                    );
                    
                     $tabs.tabs().addClass('ui-tabs-vertical ui-helper-clearfix');
                    $("#"+$id+" li").removeClass('ui-corner-top').addClass('ui-corner-left');
              
                    
                    $("#"+$id+" li a").click(function() {
                    if($(this).attr('linkref')!="#")
                     window.open($(this).attr('linkref'),'_self',false);
                    });
                    
                   
                    
                    $("#"+$id+" li a").mouseover(function() {
                 
                    var tab=$(this).attr('href');
                    var img_src=$(this).attr('img'); 
                     //console.log("Tab:"+tab);
                     //console.log("Img:"+img_src);
                     //console.log($(tab+" img"));
                     //$(tab+" img").attr('src',img_src);
                     //console.log($(tab).parent().parent());
                     
                     //console.log($("#img-principal"));
                     //console.log($("#img-principal.imagen"));
                    
                     if(tab.indexOf('1'))
                     {
                     $(tab+" img").attr('src',img_src);
                     }
                    //console.log("$txtSubtitulo.imgPrincipal.Data");
                    
                     
            
                    });
                    
                    
                 
                }); 

            
             Y.log('Success!');
        }
    
    });
    
  
}); 

</script>
