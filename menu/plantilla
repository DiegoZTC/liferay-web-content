<script type="text/javascript">

var aURLS=[];

if (typeof jQuery == 'undefined') {  
    
      aURLs = [
    '$imagePath../../js/jquery/jquery-2.1.0.min.js',
    '$imagePath../../js/jquery/jquery-ui.js',
    '$imagePath../../js/responsive-tabs/jquery.responsiveTabs.min.js'    
];

} else {

  aURLs = [
    
    '$imagePath../../js/jquery/jquery-ui.js',
    '$imagePath../../js/responsive-tabs/jquery.responsiveTabs.min.js'    
    ];
    

}


var jcss=[
'$imagePath../../css/responsive-tabs/responsive-tabs.css'
];


YUI().use('get', function(Y){


    Y.Get.js(
    aURLs ,
    {
    
        onFailure: function () {
          Y.log('Failure!');
        },

        onSuccess: function () {
           $(document).ready(function(){ 
           
           
                var $tabs = $('#menu');
                 
                    
                    $( "#menu" ).fadeIn( "slow","linear");
                    $("#menu-wrap").css("display", "none");
                    
                    $( "#menu" ).fadeIn("start", function() {
                    $("#nav-menu").fadeIn("slow"); 
                    $("#nav-menu").css("background","#CCCCCC");
                 });
                     
                     
                  
                    
                    $tabs.responsiveTabs({
                    startCollapsed: 'accordion',
                    event: 'mouseover',
                    active: 0
                    });
         
                    
           }); 
            
          Y.log('Success!');
        }
    
    });
    
  
}); 



</script>
